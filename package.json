{
  "name": "ZDEV-Website",
  "version": "1.0.0",
  "description": "",
  "scripts": {
    "check:node": "check-node-version --node \">=8.1 <9\"",
    "test": "npm run lint",
    "dev": "bin/buildStatic.sh && next dev",
    "build": "bin/buildStatic.sh && next build",
    "start": "next start",
    "deploy:dev": "now --name=z-dev-site-dev --alias=z-dev-site-dev",
    "deploy:prod": "now --name=z-dev-site-prod",
    "deploy:ci:dev": "npm run deploy:dev -- --token=CeRSRknwt4kCcA1pEL32mVNV",
    "deploy:ci:prod": "npm run deploy:prod -- --token=CeRSRknwt4kCcA1pEL32mVNV",
    "postinstall": "npm run check:node",
    "lint": "npm run lint:js && npm run lint:sass",
    "lint:without:prettier": "npm run lint:js:without:prettier && npm run lint:sass",
    "lint:watch": "nodemon --watch ./ --exec \"npm run lint:without:prettier\"",
    "lint:js": "eslint ./pages ./components ./styles",
    "lint:js:without:prettier": "npm run lint:js -- --rule 'prettier/prettier: 0'",
    "lint:sass": "stylelint '{components,pages}/**/*.js'",
    "format:sass": "stylefmt --recursive 'styles/**/*.*css'",
    "format:js": "prettier --single-quote --trailing-comma all --no-semi --print-width 180 --write \"{pages,styles,components}/**/*.js\"",
    "precommit": "lint-staged && npm run lint",
    "eslint-check": "eslint --print-config .eslintrc | eslint-config-prettier-check"
  },
  "license": "ISC",
  "dependencies": {
    "autoprefixer": "6.7.6",
    "babel-plugin-module-resolver": "2.5.0",
    "babel-plugin-styled-components": "^1.1.4",
    "babel-plugin-wrap-in-js": "^1.1.0",
    "bootstrap-sass": "^3.3.5",
    "check-node-version": "^2.1.0",
    "firebase": "^4.1.3",
    "glob": "7.1.1",
    "ionicons-pre": "^1.0.0-pre",
    "next": "^2.4.0",
    "node-sass": "^4.4.0",
    "normalize.css": "5.0.0",
    "npm": "^5.0.1",
    "postcss-easy-import": "2.0.0",
    "postcss-loader": "1.3.3",
    "raw-loader": "^0.5.1",
    "react": "^15.4.2",
    "react-dom": "^15.4.2",
    "react-modal": "^2.2.1",
    "react-scrollable-anchor": "^0.4.2",
    "react-slick": "^0.14.11",
    "sass-loader": "^4.1.1",
    "smooth-scroll": "^11.1.0",
    "styled-components": "^2.1.0",
    "styled-jsx": "^1.0.3",
    "yarn": "^0.24.5"
  },
  "devDependencies": {
    "babel-core": "^6.22.1",
    "babel-eslint": "7.1.1",
    "babel-plugin-transform-class-properties": "6.22.0",
    "babel-plugin-transform-object-rest-spread": "^6.22.0",
    "babel-plugin-transform-runtime": "^6.22.0",
    "babel-preset-es2015": "^6.22.0",
    "babel-preset-react": "6.22.0",
    "babel-preset-react-hmre": "1.1.1",
    "eslint": "^3.14.1",
    "eslint-config-airbnb": "14.0.0",
    "eslint-config-prettier": "^1.7.0",
    "eslint-plugin-import": "2.2.0",
    "eslint-plugin-jsx-a11y": "3.0.2",
    "eslint-plugin-prettier": "^2.0.1",
    "eslint-plugin-react": "6.9.0",
    "husky": "^0.13.3",
    "lint-staged": "^3.4.0",
    "ncp": "^2.0.0",
    "nodemon": "^1.11.0",
    "now": "^6.2.4",
    "prettier": "^1.2.2",
    "recursive-readdir-sync": "^1.0.6",
    "sass-lint": "^1.10.2",
    "sharp": "^0.18.1",
    "stylefmt": "^5.3.2",
    "stylelint": "^7.10.1",
    "stylelint-config-standard": "^16.0.0",
    "stylelint-processor-styled-components": "^0.1.2"
  },
  "engines": {
    "node": ">=8 <9"
  },
  "lint-staged": {
    "{components,pages,styles}/**/*.js": [
      "prettier --single-quote --trailing-comma all --no-semi --print-width 180 --write",
      "git add"
    ]
  }
}
